{
  "name": "bacchus",
  "description": "Parse, validate, and visualize task graphs in the VINE format",
  "private": true,
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/goldenwitch/bacchus.git"
  },
  "homepage": "https://github.com/goldenwitch/bacchus",
  "bugs": {
    "url": "https://github.com/goldenwitch/bacchus/issues"
  },
  "packageManager": "yarn@4.6.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "e2e": "yarn workspace @bacchus/ui e2e",
    "e2e:chat": "yarn workspace @bacchus/ui e2e:chat",
    "e2e:chat:live": "yarn workspace @bacchus/ui e2e:chat:live"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6",
    "@testing-library/svelte": "^5",
    "@vitest/coverage-v8": "^3.0.0",
    "dotenv": "^16.4.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-svelte": "^3.0.0",
    "husky": "^9.0.0",
    "jsdom": "^25",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "verbatimModuleSyntax": true,
    "types": ["svelte"]
  },
  "include": [
    "src/**/*",
    "src/**/*.svelte",
    "__tests__/**/*",
    "e2e/**/*",
    "vite.config.ts"
  ]
}
